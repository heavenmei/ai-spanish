
.scenario-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 24rpx;
  border-bottom: none;

  background: #fefbf7;
  border: 1px solid #f0e6d2;
  padding: 24rpx 24rpx;

}

.scenario-card_top{
  display: flex;
  justify-content: space-between;
}


.scenario-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 56px;
  height: 56px;
}

.scenario-card__thumb:empty {
  display: none;
  margin: 0;
}

.scenario-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}


.scenario-card__body {
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  row-gap: 4px;
}

.scenario-card__name {
  flex-shrink: 0;
  font-size: 16px;
  color: #333;
  font-weight: 500;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-word;
}

.scenario-card__desc {
  flex-shrink: 0;
  font-size: 12px;
  color: #787878;
  font-weight: 400;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
}

.scenario-card__down{
  margin-top: 4px;
  width: 100%;
  text-align: center;
}
