.scenario-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 24rpx;
  border-bottom: none;
  /* border: 1px solid #f0e6d2; */
  width: 100px;
  overflow: hidden;
  position: relative;

  box-shadow: 2rpx 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.scenario-card__thumb {
  position: relative;
  width: 100%;
  height: 120px;
  display: flex;
}

.scenario-card__imgEmpty {
  width: 100%;
  height: 100%;
  background-color: #e5e5e5;
}

.scenario-card__body {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 12rpx;
}

.scenario-card__name {
  flex-shrink: 0;
  font-size: 16px;
  color: #333;
  font-weight: 500;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-word;
}

.scenario-card__desc {
  flex-shrink: 0;
  font-size: 12px;
  color: #787878;
  font-weight: 400;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-word;
}

.scenario-card__down {
  margin-top: 4px;
  width: 100%;
  text-align: center;
}
